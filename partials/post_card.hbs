<article class="card">
    {{#if feature_image}}
    <div class="card-image">
        <div class="image is-3by1 card-background" style="background-image: url({{feature_image}});">
    </div>
    {{/if}}
    <div class="card-content">
        <p class="has-text-centered">
            <a class="title is-5" href="{{url}}">{{title}}</a>
        </p>
    </div>
</article>
